<%= form_for(@vocentry) do |f| %>
  <% if @vocentry.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@vocentry.errors.count, "error") %> prohibited this vocentry from being saved:</h2>

      <ul>
      <% @vocentry.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :eng_word %><br />
    <%= f.text_field :eng_word %>
  </div>
  <div class="field">
    <%= f.label :eng_desc %><br />
   <%= f.text_area :eng_desc %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
